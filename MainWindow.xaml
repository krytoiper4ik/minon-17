<Window x:Class="MatrixOperationsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Matrix Operations" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Select Task:" FontWeight="Bold"/>
            <ComboBox x:Name="TaskComboBox" SelectionChanged="TaskComboBox_SelectionChanged"/>
            
            <StackPanel x:Name="InputPanel" Margin="0,10,0,0">
                <!-- Dynamic input controls will be added here -->
            </StackPanel>
            
            <Button x:Name="ExecuteButton" Content="Execute" Click="ExecuteButton_Click" Margin="0,10,0,0" Padding="10,5"/>
        </StackPanel>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Input">
                <TextBox x:Name="InputTextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="Output">
                <TextBox x:Name="OutputTextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="File 1">
                <TextBox x:Name="File1TextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="File 2">
                <TextBox x:Name="File2TextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="File 3">
                <TextBox x:Name="File3TextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
